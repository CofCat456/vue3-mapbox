{
  "name": "@vue-easy-mapbox/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "play": "npm -C playground run dev",
    "watch": "pnpm -r --filter=./packages/* --parallel run watch",
    "build": "rimraf packages/*/dist --glob && pnpm -r --filter=./packages/* run build",
    "review": "npx changelogithub --dry",
    "release": "bumpp -r && pnpm -r publish --access public --no-git-checks",
    "prepare": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "up": "taze major -wIr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^22.1.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.11.0",
    "bumpp": "^9.4.2",
    "eslint": "^9.8.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "pnpm": "^9.6.0",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vitepress": "1.0.0-beta.7",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
